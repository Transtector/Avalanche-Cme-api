html,
body
	font 14px 'Helvetica Neue', Helvetica, Arial, sans-serif
	line-height 1.4em
	background header-bg-color
	color fg-color
	margin 0
	padding 0
	overflow-x hidden
	font-smoothing antialiased

a
	color link-color

button.btn
	background-color button-bg-color
	background-repeat no-repeat
	background-position center center
	background-size 32px 32px
	color #fff
	font-size 20px
	height 48px
	width 64px
	border 0
	outline 0
	transition all 0.3s ease 0s
button.btn:hover
	opacity 0.75
	cursor pointer
button.btn:disabled
	opacity 1
	background-color grayscale(button-bg-color)
	cursor default

input[type="text"]
	outline 0
