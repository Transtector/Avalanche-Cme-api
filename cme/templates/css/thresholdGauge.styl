.th-config
	margin 0
	margin-bottom 20px // spacing out 2 config divs
	&.single
		margin-top 10%
	table
		border-collapse collapse
		margin-left 1%
		width 98%
	tbody
		border-top 2px solid #eee
	td
		width 11.1%
		vertical-align middle
		text-align center
		border 0px solid #ccc
	tbody td
		height 11px
	tr.gauge
		.alarm
			height 5px
			background-color error-color
		.warning
			background-color warning-color
		.nominal
			background-color green
	td.input
		padding-left 2px
		padding-right 2px
	input[type='text']
		width 100%
		text-align center
		box-sizing border-box
		&.error
			border-width 1px
			border-color error-color
			padding 2px
		&.active
			font-size 100%
			font-weight bold		
	thead input[type='text']
		font-style italic
		border 0
		background-color #eee
	thead td.nominal
		input
			width 34%
			margin-right 5px
			text-align right
		label
			font-size 90%
			font-style italic	
	.r
		border-right-width 1px
	.b
		border-bottom-width 1px
	.percent
		position absolute
		margin-left -1.3em
		font-size 80%
	.unit
		font-size 18px
	.subunit
		font-size 12px
	.th-percent
		padding-left 40%
		padding-top 2px
		font-size 90%



