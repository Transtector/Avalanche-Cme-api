// Stand-alone error page - generally used for 404 and UI route error support.


@font-face 
	font-family 'Bree Serif'
	src url('/BreeSerif-Regular.otf')

body.errorpage
	position relative
	height 100%
	margin 0
	padding 0
	line-height normal
	color #fff
	background-linear-gradient(top, header-gradient-top-color, 0%, header-gradient-bottom-color, header-gradient-bottom-stop)
	.content
		width 100%
		position absolute
		text-align center
		top 50%
		transform translateY(-50%)
	p
		margin 0
	.enormous-font
		font-family 'Bree Serif', serif
		font-size 10em
		span
			display inline-block
			width 96px
			height 96px
			background-repeat no-repeat
			background-image url("data:image/svg+xml;charset=utf8,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 128 128'><defs><mask id='mask'><circle cx='50%' cy='50%' r='64' fill='white'/><path fill='black' d='M0,84 L 33.5,84 L 88,30 L 68,84 L 128, 84 L 128, 92 L 55, 92 L 66,66 L 39, 92 L 0, 92z' /></mask></defs><circle cx='50%' cy='50%' r='64' fill='white' mask='url(#mask)'/></svg>")
	.big-font
		font-size 2em
	