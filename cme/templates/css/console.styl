#console
	position relative
	margin 10px
.panel
	background #fff
	border 1px solid #ccc
	border-radius 4px
	min-height 100px
	.title
		margin 10px 10px 0 10px
		font-size 120%
		font-weight bold
	&::after
		content ''
		display block
		clear both

.panel#home
	background #fff
	span
		margin 10px

.panel#config
	background #fff
	border 1px solid #ccc
	border-radius 4px
	min-height 100px

.panel#error
	display none
	text-align center
	position absolute
	top 0
	bottom 0
	left 0
	right 0
	background rgba(0,0,0,0.3)
	.message
		background #fff
		color error-color
		position absolute
		width 260px
		border-radius 3px
		height 300px
		top 50%
		left 50%
		margin-top -150px
		margin-left -130px
		box-shadow 4px 4px 10px #666

.input-group
	margin 10px
	padding 0 10px 10px 10px
	display inline-block
	float left
	text-align left
	border 1px solid bg-color
	box-shadow 1px 1px 3px #ddd
	.input-group-name
		color #006EC5
		background bg-color
		margin 0 -10px
		text-align center
		font-size 90%
		font-weight bold
		text-transform uppercase
	.textinput
		margin 10px auto
		border-bottom 1px solid #ccc
		label
			display block
			color #006EC5
			font-size 90%
			font-weight bold
		input
			margin-left 8px
			width 242px
			font-size 20px
			line-height 40px
			border none
			background transparent
			outline none
