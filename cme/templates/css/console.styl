#console
	position relative
	margin 10px
.panel
	background #fff
	border 1px solid #ccc
	border-radius 4px
	min-height 100px
	.title
		margin 10px 10px 0 10px
		font-size 120%
		font-weight bold
	&::after
		content ''
		display block
		clear both

.panel#home
	background #fff
	span
		margin 10px

.panel#config
	background #fff
	border 1px solid #ccc
	border-radius 4px
	min-height 100px

.panel#error
	display none
	text-align center
	position absolute
	top 0
	bottom 0
	left 0
	right 0
	background rgba(0,0,0,0.3)
	.message
		background #fff
		color error-color
		position absolute
		width 260px
		border-radius 3px
		height 300px
		top 50%
		left 50%
		margin-top -150px
		margin-left -130px
		box-shadow 4px 4px 10px #666

.input-group
	position relative
	display inline-block
	margin 10px
	float left
	text-align left
	overflow hidden
	border 1px solid bg-color
	border-radius 3px
	box-shadow 1px 1px 3px #ddd
	.input-group-title
		position relative
		color #006EC5
		background bg-color
		text-align center
		font-size 90%
		font-weight bold
		text-transform uppercase
		button
			position absolute
			left 0
			width 100%
			height 100%
			background transparent
		&::before
			content ''
			position absolute
			width 20px
			height 100%
			left 5px
			top 50%
			margin-top -10px
			background-image url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 20 20'%3E%3Cpath fill='%23006EC5' d='m10,15l-8,-8l16,0l-8,8z' /%3E%3C/svg%3E")
			transition all 0.3s ease 0s
	&.collapsed
		.input-group-title::before
			transform rotate(-90deg)
		.input-group-content
			position relative
			padding 0 10px
			height 0

	.input-group-content
		padding 10px
		overflow hidden
		transition all 0.3s ease 0s

	.input-group-cluster
		margin 10px auto
		white-space nowrap
		border-bottom 1px solid #ccc
		> label
			display block
			color #006EC5
			font-size 90%
			font-weight bold
		input, a, .led-text, .rdt input[type="text"]
			font-size 20px
			line-height 40px
			border 0
			background transparent
			outline none
		input[type="checkbox"]
			margin 5px 20px
			zoom 2
		input[type="text"]
			margin-left 8px
			width 324px
		input[readonly]
			color #999
		.rdt
			display inline-block
		.rdt input[type="text"]
			margin-left 0
			width 164px
			text-align center
		a
			display inline-block
			padding 1px
			width 332px
			text-align center
		textarea
			width 328px
			height 40px
			outline none
			resize vertical
		.radio-group
			padding 10px
			label
				margin 10px

	.input-group-buttons
		margin -10px // changes with .input-group margin above
		margin-top 0
		border-top 1px solid bg-color
		button
			background transparent
			color #006EC5
			width 50%
		button:first-child
			border-right 1px solid bg-color

	.rdt .rdtPicker
		border-color #e6e6e6
	.rdt.shifted .rdtPicker
		right 0
	.rdtPicker button
		width auto
		color button-bg-color
		background transparent
		opacity 0.25
		&:hover
			opacity 1
			background transparent

.zc
	display inline-block
	text-align center
	font-size 20px
	margin-bottom 5px
	> div
		float left
	.zcBtn
		color button-bg-color
		line-height 40px
		background transparent
	.zcCounter .zcBtn
		height 40px
		opacity 0.25
	.zcCounter .zcBtn:hover
		opacity 1
	.zcSeparator
		margin 40px 0
		font-size 20px
	&::after
		content ''
		display block
		height 0
		clear both

.led-wrapper
	position relative
	height 40px
	color #999
	.led
		position absolute
		width 20px
		height 20px
		top 50%
		margin-top -10px
		left 10px
		background #999
		border-radius 100%
	.led.red
		background #900
	.led.green
		background #090
	.led.yellow
		background #990
	.led-text
		padding-left 40px
