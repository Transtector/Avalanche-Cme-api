#console
	position relative
	margin 10px

.panel
	background #fff
	border 1px solid #ccc
	border-radius 4px
	min-height 100px
.panel::after
	content ''
	display block
	clear both

.panel#home
	background lightYellow

.panel#config
	background #fff
	border 1px solid #ccc
	border-radius 4px
	min-height 100px

.input-group
	margin 10px
	padding 0 10px 10px 10px
	display inline-block
	float left
	text-align left
	border 1px solid bg-color
	box-shadow 1px 1px 3px #ccc
	.input-group-name
		color #fff
		background bg-color
		margin 0 -10px
		text-align center
		font-size 90%
		font-weight bold
		text-transform uppercase
	.textinput
		margin 10px auto
		border-bottom 1px solid #ccc
		label
			display block
			font-size 90%
			font-weight bold
		input
			margin-left 8px
			width 242px
			font-size 20px
			line-height 40px
			border none
			background transparent
			outline none
