


/* input-groups used in the config panel */
.input-group
	position relative
	margin 10px
	float left
	text-align left
	overflow hidden
	box-shadow 1px 1px 3px #ccc
	
.input-group > button
	height 32px
	width 380px
	
.input-group > button#factory-reset
	background-color error-color

.input-group-title button
	width 100%
	height 32px
.input-group-title::after
	content ''
	position absolute
	width 0
	height 0
	left 6px
	top 12px
	border-left 8px solid transparent
	border-right 8px solid transparent
	border-top 8px solid #fff
	transition all 0.3s ease 0s
		
.input-group.collapsed
	.input-group-title::after
		transform rotate(-90deg)
	.input-group-content
		position relative
		padding 0 10px
		height 0

.input-group-content
	padding 10px
	overflow hidden
	background #fff
	transition all 0.3s ease 0s
	> ul
		margin 0
		padding 0
		list-style none

.input-group-cluster
	width 360px
	margin 10px auto
	white-space nowrap
	border-bottom 1px solid #ccc
	> label
		display block
		color #006EC5
		font-size 90%
		font-weight bold
	> input[type="text"],
	> input[type="password"]
		margin-left 8px
		width 350px
	input, a, .led-text
		font-size 20px
		line-height 40px
		border 0
		background transparent
		outline none
	input[type="checkbox"], 
	input[type="radio"]
		zoom 2
		margin-right 0
		vertical-align middle
	input[readonly]
		color #999
	a
		display block
		width 360px
		text-align center
	textarea
		width 334px
		height 40px
		outline none
		resize vertical
	.radio-group
		padding 10px
		> div
			margin-top 10px
	#ntpGroup, #tempGroup
		padding 10px
		position relative
		#status
			border 0
			margin 0
			position absolute
			top -10px
			right 10px
		#ta-wrapper label
			margin-top 10px
			display block

li.input-group-cluster
	position relative
	padding 8px 0
	font-size 90%
	text-align right
	> .btn
		background-color transparent
	> .btn.icon-left
		float left
	


.input-group-buttons
	margin -10px // changes with .input-group margin above
	margin-top 0
	border-top 1px solid bg-color
	.btn
		background transparent
		color #006EC5
		width 50%
	.btn:first-child
		border-right 1px solid bg-color
	.btn:disabled
		background-color transparent
		color #ddd
	.btn.full-width
		width 100%
		border-right 0
